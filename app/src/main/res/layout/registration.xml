<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:gravity="center"
    android:scrollbars="none">

    <!-- Заголовок -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="286dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textColor="#001A34"
        android:textSize="32sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:inputType="text"/>

    <!-- Поле для ввода логина -->
    <EditText
        android:id="@+id/loginField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Логин"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:inputType="text"/>

    <!-- Поле для ввода пароля -->
    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
/>

    <!-- Кнопка регистрации -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textColor="#FFFFFF"
        android:backgroundTint="#005BFF"
        android:textSize="18sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
/>

    <!-- Ссылки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Ссылка на авторизацию -->
        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уже есть аккаунт? Войти как покупатель"
            android:textColor="#00A2FF"
            android:textSize="16sp"
            android:fontFamily="@font/ramona_light"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
/>

        <!-- Ссылка на авторизацию как продавец -->
        <TextView
            android:id="@+id/sellerAuthLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти как продавец"
            android:textColor="#F1117E"
            android:textSize="16sp"
            android:fontFamily="@font/ramona_light"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
/>

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:gravity="center"
    android:scrollbars="none">

    <!-- Заголовок -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="286dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Логотип"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановление пароля"
        android:textColor="#001A34"
        android:textSize="32sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>

    <!-- Поле для ввода почты -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ваша почта"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:importantForAccessibility="yes"
        android:contentDescription="Поле для ввода почты"
        android:inputType="textEmailAddress"/>

    <!-- Поле для нового пароля -->
    <EditText
        android:id="@+id/newPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Новый пароль"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:importantForAccessibility="yes"
        android:contentDescription="Поле для ввода нового пароля"/>

    <!-- Поле для подтверждения нового пароля -->
    <EditText
        android:id="@+id/confirmPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Подтвердите новый пароль"
        android:textSize="18sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        android:inputType="textPassword"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:importantForAccessibility="yes"
        android:contentDescription="Поле для подтверждения нового пароля"/>

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Восстановить пароль"
        android:textColor="#FFFFFF"
        android:backgroundTint="#005BFF"
        android:textSize="18sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="Кнопка восстановления пароля"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уже есть аккаунт? Войти как покупатель"
            android:textColor="#00A2FF"
            android:textSize="16sp"
            android:fontFamily="@font/ramona_light"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:importantForAccessibility="yes"
            android:contentDescription="Ссылка на экран авторизации"/>
    </LinearLayout>
</LinearLayout>

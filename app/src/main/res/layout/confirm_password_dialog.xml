<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подтверждение пароля"
        android:textColor="#001A34"
        android:textSize="18sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Старый пароль"
        android:textSize="16sp"
        android:textColor="#001A34"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ramona_light"
        android:textColorHint="#005BFF"
        android:importantForAccessibility="yes"
        android:contentDescription="Поле для ввода старого пароля"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        android:textColor="#FFFFFF"
        android:backgroundTint="#005BFF"
        android:textSize="16sp"
        android:fontFamily="@font/ramona_bold"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Кнопка подтверждения пароля"/>

    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textColor="#005BFF"
        android:backgroundTint="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/ramona_bold"
        android:visibility="gone"
        android:importantForAccessibility="yes"
        android:contentDescription="Кнопка восстановления пароля"/>
</LinearLayout>